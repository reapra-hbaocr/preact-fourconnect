{
	"compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "./dist",
		"target": "es5",
		"moduleResolution": "node",
		"module": "esnext",
		"noImplicitAny": false,
		"removeComments": true,
		"strict": true,
		"sourceMap": true,
		"jsx": "react",
		"jsxFactory": "h",
		"allowJs": true,
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": false,
		"lib": [
			"dom",
			"es5",
			"es6",
		],
		"skipLibCheck": true,
		"suppressImplicitAnyIndexErrors": true,
		"baseUrl": ".",
	},
	"exclude": [
		"dist",
		"build"
	],
	"awesomeTypescriptLoaderOptions": {
		"useBabel": true,
		"useCache": true,
	},
	"include": [
		"node_modules/@types",
		"src/**/*"
	]
}